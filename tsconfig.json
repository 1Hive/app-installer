{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "./src",
    "./node_modules/bn.js-typings/index.d.ts"
  ],
  "exclude": []
}
